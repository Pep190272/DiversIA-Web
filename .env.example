# Variables de entorno requeridas para DiversIA

# Base de datos PostgreSQL (REQUERIDO)
DATABASE_URL=postgresql://usuario:password@host:puerto/nombre_bd

# Configuración de sesiones Flask (REQUERIDO)
SESSION_SECRET=tu_clave_secreta_muy_segura_aqui

# Email SMTP Gmail para notificaciones (OPCIONAL)
GMAIL_USER=tu_email@gmail.com
GMAIL_APP_PASSWORD=tu_password_de_app_gmail

# SendGrid para email marketing (OPCIONAL)
SENDGRID_API_KEY=SG.tu_api_key_de_sendgrid

# Google OAuth (OPCIONAL)
GOOGLE_OAUTH_CLIENT_ID=tu_client_id.apps.googleusercontent.com
GOOGLE_OAUTH_CLIENT_SECRET=tu_client_secret

# Configuración de Vercel (AUTOMÁTICO)
VERCEL=1
VERCEL_URL=tu-app.vercel.app